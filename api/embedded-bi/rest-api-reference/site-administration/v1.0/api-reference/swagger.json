        "tags": [
          "Application Startup"
        ],
        "summary": "Application Startup",
        "description": "Configure the Bold BI or Bold Reports application using the REST API.",
        "operationId": "application_startup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
